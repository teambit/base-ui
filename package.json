  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.1.43",
      "tester": "bit.envs/testers/mocha@5.0.2"
    },
    "componentsDefaultDirectory": "src/bit-components/{name}",
    "defaultScope": "bit.base-ui",
    "packageManager": "yarn",
    "overrides": {
      "*": {
        "dependencies": {
          "react": "-",
          "react-dom": "-"
        },
        "devDependencies": {
          "@types/chai": "^4.2.8",
          "@types/sinon": "^7.5.1",
          "@types/mocha": "^5.0.0",
          "chai": "^4.2.0",
          "sinon": "^8.1.1"
        },
        "env": {
          "compiler": {
            "bit.envs/compilers/react-typescript@3.1.43": {
              "rawConfig": {
                "tsconfig": {
                  "compilerOptions": {
                    "target": "ES5",
                    "module": "CommonJS"
                  }
                }
              }
            }
          }
        }
      }
    }
